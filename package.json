  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@types/firebase": "^3.2.1",
    "@types/node": "^18.7.18",
    "concurrently": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "firebase": "9.9.2",
    "firebase-admin": "^11.0.1",
    "lodash": "^4.17.21",
    "nanoid": "2.1.11",
    "nodemon": "^2.0.19",
    "typescript": "^4.8.3"
  },
  "scripts": {
    "dev:front": "parcel serve ./client/index.html",
    "build:front": "parcel build ./client/index.html",
    "build:api": "tsc ./client/index.ts",
    "dev:api": "nodemon --watch ./server/api.ts --exec ts-node ./server/api.ts",
    "build": "npx concurrently 'yarn build:front' 'yarn build:api'",
    "dev": "concurrently 'yarn dev:front' 'yarn dev:api'",
    "start": "node ./client/index.js"
  },
  "devDependencies": {
    "@parcel/transformer-image": "2.0.0-rc.0",
    "parcel": "^2.0.0-nightly.841"
